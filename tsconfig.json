{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "importHelpers": true,
    "lib": ["DOM", "ES2015"],
    "target": "ES5",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ]
}
